# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_COMMAND_PREFIX=!

# Backend API
API_BASE_URL=http://localhost:8000
API_KEY=your_api_key_here

# Database
DATABASE_URL=postgresql://extremism_user:password@localhost:5432/extremism_monitor

# Redis
REDIS_URL=redis://localhost:6379/0

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229

# Risk Thresholds
RISK_LOW_THRESHOLD=30
RISK_MEDIUM_THRESHOLD=60
RISK_HIGH_THRESHOLD=85
RISK_CRITICAL_THRESHOLD=95

# Features
ENABLE_RISK_MONITORING=true
ENABLE_ENGAGEMENT_TRACKING=true
ENABLE_AUTO_ALERTS=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log
